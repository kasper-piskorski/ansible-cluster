
[program:neo4j-server]
command={{cluster_home}}/neo4j/server/bin/neo4j console
user={{user_name}}
autostart=true
autorestart=true
startsecs=10
startretries=999
stopasgroup=true
killasgroup=true
log_stdout=true
log_stderr=true
stderr_logfile={{log_home}}/neo4j/neo4j.err
stderr_logfile_maxbytes=100MB
stderr_logfile_backups=10
stderr_events_enabled=true
stdout_logfile={{log_home}}/neo4j/neo4j.out
stdout_logfile_maxbytes=10MB
stdout_logfile_backups=10
stdout_events_enabled=true

